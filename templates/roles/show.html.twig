{% block title %}Roles{% endblock %}

{% block body %}
    <h1>Roles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ role.nombre }}</td>
            </tr>
            <tr>
                <th>Identificador</th>
                <td>{{ role.identificador }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
