{% extends 'base.html.twig' %}

{% block title %}Roles index{% endblock %}

{% block body %}
    <h1>Roles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Identificador</th>
                <th>Descripcion</th>
                <th>IsActivo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.nombre }}</td>
                <td>{{ role.identificador }}</td>
                <td>{{ role.descripcion }}</td>
                <td>{{ role.isActivo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('roles_show', {'id': role.id}) }}">show</a>
                    <a href="{{ path('roles_edit', {'id': role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('roles_new') }}">Create new</a>
{% endblock %}
